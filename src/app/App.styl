*
  box-sizing: border-box
  margin: 0
  padding: 0

html
  font-size: 62.5%
  font-family: Arial, Helvetica, sans-serif

body
  background-color: whitesmoke
  max-width: 350px
  margin: 0 auto
  line-height: 1.8rem
  text-align: center

  header
    margin-block: 25px
    font-size: 2rem
  
  .loseMessege
    color: red
    font-size: 3rem
    margin-block: 25px


  .winMessege
    color: green
    font-size: 3rem
    margin-block: 25px

  .MemoryGame--Interface
    padding-block: 15px
    background-color: rgb(230,230,240)
    border-radius: 8px

    .MemoryGame--Interface__info
      display: flex
      justify-content: center
      gap: 20px
      margin-block: 10px
      font-size: 1.4rem
      
      span
        font-size: 1.8rem

      .levels
        color: rgb(10, 190, 10)
      
      .points
        color: rgb(10, 10, 190)

      .strikes
        color: rgb(190, 10, 10)
button
  height: 30px
  padding-inline: 20px
  border-radius: 8px
  border: 2px solid rgb(170,170,230)
  background-color: rgb(170,170,230)
  color: #333
  box-shadow: 0px 0px 15px 2px rgba(120,120,230, 0.4);
  cursor: pointer


button:disabled
  opacity: 50%